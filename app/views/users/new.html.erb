<%= form_for @user do |f| %>
  <%= f.label :username, 'Your username: ' %>
  <%= f.text_field :username, placeholder: "Hello" %>

  <%= f.label :email %>
  <%= f.text_field :email, :value => "Hello" %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>
